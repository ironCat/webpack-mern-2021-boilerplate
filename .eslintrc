{
  "parser": "babel-eslint",
  "root": true,
  "extends": [
    "airbnb",
    "plugin:react/recommended"
  ],
  "globals": {
    "document": true
  },
  "rules": {
    "semi": "off",
    "space-before-function-paren": "off",
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "arrow-body-style": ["error", "always"],
    "jsx-a11y/anchor-is-valid": "off",
    "jsx-a11y/label-has-for": [ 2, {
      "required": {
        "every": [ "id" ]
      }
    }],
  }
}